<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".BlankFragment3">

    <TextView
        android:layout_width="wrap_content"
        android:text="MY Profile"
        android:textColor="@color/Wihte"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="100dp"
            android:src="@drawable/person"
            android:scaleType="centerCrop"
            android:layout_height="100dp"/>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_name_user"
        android:layout_width="wrap_content"
        android:text="Yahia Nasrallah"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/Wihte"
        android:layout_height="wrap_content"/>


    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/darkwhite"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="350dp"
            android:orientation="vertical"
            android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/edit_profile_user"
            android:layout_width="match_parent"
            android:layout_margin="20dp"
            android:layout_height="wrap_content">


            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:backgroundTint="@color/Wihte"
                app:cardCornerRadius="10dp"
                android:layout_height="40dp">
                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/baseline_person_24"
                    android:layout_gravity="center"
                    android:layout_height="20dp"
                    app:tint="@color/dark" />



            </androidx.cardview.widget.CardView>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:text="Edit Profile"
                android:textColor="@color/Wihte"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/baseline_keyboard_arrow_right_24"
                android:layout_gravity="center"
                android:layout_marginStart="130dp"
                android:layout_height="30dp"/>


        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:backgroundTint="@color/Wihte"
                    app:cardCornerRadius="10dp"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/status"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        app:tint="@color/dark" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="My Status"
                    android:textColor="@color/Wihte"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="135dp"
                    android:layout_height="30dp"/>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/Wihte"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/baseline_settings_24"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        app:tint="@color/dark" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="Settings"
                    android:textColor="@color/Wihte"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="150dp"
                    android:layout_height="30dp"/>


            </LinearLayout>


            <View
                android:id="@+id/divider5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:backgroundTint="@color/Wihte"
                android:background="?android:attr/listDivider" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/Wihte"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/baseline_person_add_alt_1_24"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        app:tint="@color/dark" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="Invite a friend"
                    android:textColor="@color/Wihte"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="105dp"
                    android:layout_height="30dp"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/log_out"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginEnd="20dp"                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/Wihte"
                    android:layout_height="40dp">
                    <ImageView
                        android:layout_width="20dp"
                        android:src="@drawable/baseline_logout_24"
                        android:layout_gravity="center"
                        android:layout_height="20dp"
                        app:tint="@color/dark" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:text="log Out"
                    android:textColor="@color/Wihte"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:layout_width="30dp"
                    android:src="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_gravity="center"
                    android:layout_marginStart="160dp"
                    android:layout_height="30dp"/>


            </LinearLayout>



        </LinearLayout>





    </androidx.cardview.widget.CardView>






</LinearLayout>