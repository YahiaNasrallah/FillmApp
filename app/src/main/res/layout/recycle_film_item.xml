<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
        android:layout_marginHorizontal="10dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/darkwhite"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




        <androidx.cardview.widget.CardView
            android:id="@+id/card_image"
            android:layout_width="120dp"
            android:layout_height="180dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView_item"
                android:layout_width="120dp"
                android:layout_height="180dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_filmname_item"
            android:layout_width="wrap_content"
            android:text="Film Name"
            app:layout_constraintStart_toEndOf="@id/card_image"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_filmId_item"
            android:layout_width="wrap_content"
            android:text="Film ID"
            app:layout_constraintStart_toEndOf="@id/tv_filmname_item"
            android:layout_marginStart="20dp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/tv_Type_item"
            android:layout_width="wrap_content"
            android:text="Film Type"
            app:layout_constraintStart_toEndOf="@id/card_image"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toBottomOf="@id/tv_filmname_item"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_film_houers_item"
            android:layout_width="wrap_content"
            android:text="Film Houers"
            app:layout_constraintStart_toEndOf="@id/tv_Type_item"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toBottomOf="@id/tv_filmId_item"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_languge_item"
            android:layout_width="wrap_content"
            android:text="Film Languge"
            app:layout_constraintStart_toEndOf="@id/card_image"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toBottomOf="@id/tv_Type_item"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_film_Casting_item"
            android:layout_width="wrap_content"
            android:text="Film Casting"
            app:layout_constraintStart_toEndOf="@id/tv_languge_item"
            android:layout_marginStart="20dp"
            android:textSize="16sp"
            android:textColor="@color/Wihte"
            app:layout_constraintTop_toBottomOf="@id/tv_film_houers_item"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"/>
    </androidx.constraintlayout.widget.ConstraintLayout>





</androidx.cardview.widget.CardView>