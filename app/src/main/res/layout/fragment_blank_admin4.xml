<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".BlankFragmentAdmin4">

    <TextView
        android:layout_width="wrap_content"
        android:text="Add User"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/Wihte"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_height="wrap_content"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_update"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="50dp"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/image_userCreate"
            android:layout_width="100dp"
            android:src="@drawable/createacount1"
            android:layout_gravity="center"
            android:layout_height="100dp"/>

    </androidx.cardview.widget.CardView>



    <EditText
        android:id="@+id/ed_usernameCreate"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/Wihte"
        android:textColor="@color/Wihte"
        android:textColorHint="@color/Wihte"
        android:background="@drawable/edit_shpe"
        android:padding="10dp"
        android:hint="Enter Username"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/ed_userphoneCreate"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:drawableLeft="@drawable/baseline_phone_android_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/Wihte"
        android:layout_marginTop="20dp"
        android:textColor="@color/Wihte"
        android:textColorHint="@color/Wihte"
        android:background="@drawable/edit_shpe"
        android:padding="10dp"
        android:hint="Enter Mobile Phone"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/ed_userpasswordCreate"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/Wihte"
        android:hint="Enter Password"
        android:textColor="@color/Wihte"
        android:textColorHint="@color/Wihte"
        android:background="@drawable/edit_shpe"
        android:padding="10dp"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/ed_userRepasswordCreate"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:drawablePadding="10dp"
        android:drawableTint="@color/Wihte"
        android:textColor="@color/Wihte"
        android:textColorHint="@color/Wihte"
        android:background="@drawable/edit_shpe"
        android:padding="10dp"
        android:hint="ReEnter Password"
        android:layout_height="50dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_Createaccount"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/dark"
        app:strokeColor="@color/color"
        app:strokeWidth="2dp"
        app:cornerRadius="20dp"
        android:textColor="@color/color"
        android:text="Update Account"
        android:layout_height="55dp"/>



</LinearLayout>