<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#ebebeb"
    android:layout_marginHorizontal="20dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="50dp"
    android:layout_height="wrap_content">




    <LinearLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                app:cardCornerRadius="15dp"
                android:layout_height="150dp">
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="100sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/spider"
                    android:layout_height="150dp"/>


            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Film_name"
                    android:layout_width="wrap_content"
                    android:text="Spider Man"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:src="@drawable/baseline_location_on_24"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/Film_cast"
                            android:layout_width="wrap_content"
                            android:text="MK cinemas"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_marginStart="20dp"
                            android:src="@drawable/baseline_access_time_24"
                            android:layout_height="25dp"/>
                        <TextView
                            android:id="@+id/Film_time"
                            android:layout_width="wrap_content"
                            android:text="9:00 Am"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>






                    </LinearLayout>




                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/baseline_date_range_24"
                        android:layout_height="25dp"/>
                    <TextView
                        android:id="@+id/Film_date"
                        android:layout_width="wrap_content"
                        android:text="Wednesday, Jan 11"
                        android:textStyle="bold"
                        android:textColor="@color/dark"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:src="@drawable/baseline_chair_alt_24"
                        android:layout_height="25dp"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/chairss"
                            android:layout_width="wrap_content"
                            android:text="D3,D4,D5,D6"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=" - "
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/Chirs_num"
                            android:layout_width="wrap_content"
                            android:text="4"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:text=" Seats"
                            android:textStyle="bold"
                            android:textColor="@color/dark"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_viewDetails"
            android:layout_width="250dp"
            android:layout_gravity="center"
            app:cornerRadius="20dp"
            android:backgroundTint="@color/color"
            android:layout_marginTop="15dp"
            android:text="View Ticket"
            android:layout_height="50dp"/>


    </LinearLayout>




</androidx.cardview.widget.CardView>