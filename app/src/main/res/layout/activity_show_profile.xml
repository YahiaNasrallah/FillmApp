<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".ShowProfile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/back"
            android:layout_width="50dp"
            app:cardCornerRadius="50dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="start"
            android:backgroundTint="@color/wite"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:layout_height="30dp"/>

        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:text="Edit Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp"
            android:textColor="@color/Wihte"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>


        <androidx.cardview.widget.CardView
            android:id="@+id/edit"
            android:layout_width="50dp"
            app:cardCornerRadius="50dp"
            android:layout_marginStart="70dp"
            android:layout_gravity="start"
            android:backgroundTint="@color/wite"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_edit_24"
                android:layout_height="30dp"
                app:tint="@color/dark" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="100dp"
        app:cardCornerRadius="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/image_user"
            android:layout_width="100dp"
            android:src="@drawable/person"
            android:scaleType="centerCrop"
            android:layout_height="100dp"/>


    </androidx.cardview.widget.CardView>
    <TextView
        android:id="@+id/tv_name_show"
        android:layout_width="wrap_content"
        android:text="Yahia Nasrallah"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:textColor="@color/Wihte"
        android:layout_height="wrap_content"/>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="UserName :"
            android:textStyle="bold"
            android:textColor="@color/Wihte"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="UserName"
            android:layout_marginStart="10dp"
            android:textColor="@color/Wihte"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="20sp"
            android:text="Phone Number :"
            android:textStyle="bold"
            android:textColor="@color/Wihte"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tv_user_Phone"
            android:layout_width="wrap_content"
            android:textSize="18sp"
            android:text="Phone"
            android:layout_marginStart="10dp"
            android:textColor="@color/Wihte"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="280dp"
            android:layout_marginHorizontal="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:text="Password :"
                android:textStyle="bold"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tv_user_password"
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:text="*****"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/show_hide"
            android:layout_width="30dp"
            android:src="@drawable/baseline_hide_source_24"
            android:layout_gravity="center"
            android:layout_height="30dp"/>
    </LinearLayout>


</LinearLayout>