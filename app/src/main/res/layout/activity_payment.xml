<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    android:orientation="vertical"
    tools:context=".PaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            app:cardCornerRadius="50dp"
            android:layout_gravity="start"
            android:layout_marginStart="20dp"
            android:backgroundTint="@color/wite"
            android:layout_height="50dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_gravity="center"
                android:src="@drawable/baseline_arrow_back_ios_new_24"
                android:layout_height="30dp"/>

        </androidx.cardview.widget.CardView>
        <TextView
            android:layout_width="wrap_content"
            android:text="Payment"
            android:textColor="@color/Wihte"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="80dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_marginStart="20dp"
        app:cardCornerRadius="15dp"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/image_photo"
            android:layout_width="120dp"
            android:scaleType="centerCrop"
            android:src="@drawable/spider"
            android:layout_height="180dp"/>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/film_name"
            android:layout_width="wrap_content"
            android:text="Spider Man"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/Wihte"
            android:textStyle="bold"

            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/film_date"
                android:layout_width="wrap_content"
                android:text="Wednesday, Jan 11"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/film_time"
                android:layout_width="wrap_content"
                android:text="10:00AM"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Wihte"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Ticket Price :"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/film_price"
                android:layout_width="wrap_content"
                android:text="190.00"
                android:textSize="14sp"
                android:layout_marginStart="55dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Qty :"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/num_of_chirs"
                android:layout_width="wrap_content"
                android:text="4"
                android:textSize="14sp"
                android:layout_marginStart="110dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Qty :"
                android:textSize="14sp"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <TextView
            android:id="@+id/film_chairs"
            android:layout_width="wrap_content"
            android:text="D4,D6,D7,D8"
            android:textSize="14sp"
            android:layout_marginStart="10dp"
            android:textColor="@color/Wihte"
            android:layout_height="wrap_content"/>


        <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_weight="1"
            android:backgroundTint="@color/Wihte"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="?android:attr/listDivider" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="Total :"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/film_total"
                android:layout_width="wrap_content"
                android:text="760.00"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginStart="105dp"
                android:textColor="@color/Wihte"
                android:layout_height="wrap_content"/>
        </LinearLayout>




    </LinearLayout>

</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:text="Select Payment Method"
        android:textColor="@color/Wihte"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"/>

<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="350dp"
            android:background="@drawable/shpe2"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RadioGroup
                android:id="@+id/rg1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_1"
                android:buttonTint="@color/color"
                android:layout_marginStart="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="PayTM"
                    android:textColor="@color/Wihte"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pay via PayTM"
                    android:textSize="12dp"
                    android:textColor="@color/Wihte"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/paytmicon"
                android:layout_marginStart="150dp"
                android:layout_height="50dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="350dp"
            android:background="@drawable/shpe2"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/rg_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <RadioButton
                android:buttonTint="@color/color"
                android:id="@+id/rb_2"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="wrap_content"/>
            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Google Pay"
                    android:textColor="@color/Wihte"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pay via Google Pay"
                    android:textSize="12dp"
                    android:textColor="@color/Wihte"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/googlepay"
                android:layout_marginStart="130dp"
                android:layout_height="50dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="350dp"
            android:background="@drawable/shpe2"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/rg_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_3"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="5dp"
                    android:buttonTint="@color/color"
                    android:layout_height="wrap_content"/>

            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Credit Card"
                    android:textColor="@color/Wihte"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Pay via Debit/CreditCard"
                    android:textSize="12dp"
                    android:textColor="@color/Wihte"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_width="50dp"
                android:src="@drawable/creditcard"
                android:layout_marginStart="100dp"
                android:layout_height="50dp"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        app:cardCornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_height="50dp">
        <TextView
            android:layout_width="350dp"
            android:background="@drawable/shpe2"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RadioGroup
                android:id="@+id/rg_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/rb_4"
                    android:layout_width="wrap_content"
                    android:buttonTint="@color/color"
                    android:layout_marginStart="5dp"

                    android:layout_height="wrap_content"/>
            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Other"
                    android:textColor="@color/Wihte"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Other Payment Method"
                    android:textSize="12dp"
                    android:textColor="@color/Wihte"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RadioGroup>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_payment"
        android:layout_width="350dp"
        app:cornerRadius="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/color"
        android:text="Continue"
        android:layout_height="60dp"/>



</LinearLayout>