<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layMain"
    android:orientation="vertical"
    tools:context=".BlankFragmentAdmin1">


    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_recycle_film"
            android:layout_width="150dp"
            android:backgroundTint="@color/dark"
            app:cornerRadius="20dp"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            app:strokeColor="@color/color"
            android:textColor="@color/color"
            android:text="Film"
            android:layout_height="50dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_recycle_user"
            android:layout_width="150dp"
            android:backgroundTint="@color/dark"
            app:cornerRadius="20dp"
            app:strokeWidth="2dp"
            android:layout_margin="10dp"
            app:strokeColor="@color/color"
            android:textColor="@color/color"
            android:text="User"
            android:layout_height="50dp"/>

    </LinearLayout>


    <AutoCompleteTextView
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:backgroundTint="@color/darkwhite"
        android:textColor="@color/wite"
        android:textColorHint="@color/wite"
        android:layout_height="50dp"
        android:padding="10dp"
        android:name="search view"
        android:completionThreshold="1"
        android:completionHint="message"
        android:hint="Enter Word Here"
        android:background="@drawable/deisgn_edittext"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/baseline_search_24"
        android:drawableTint="@color/wite"
        android:drawablePadding="10dp"
        android:inputType="text"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="match_parent"
        android:id="@+id/films_list"
        />


</LinearLayout>