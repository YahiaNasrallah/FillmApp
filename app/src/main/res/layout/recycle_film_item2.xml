<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_film_item"
            android:layout_width="150dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp"
            android:layout_height="200dp">
            <ImageView
                android:id="@+id/imagefilm_item"
                android:layout_width="150dp"
                android:src="@drawable/joker"
                android:scaleType="centerCrop"
                android:layout_height="200dp"/>
            <LinearLayout
                android:layout_width="150dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_height="200dp">
                <TextView
                    android:id="@+id/tv_filmname_item"
                    android:layout_width="wrap_content"
                    android:text="Joker"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFD500"
                    android:layout_marginStart="10dp"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_star_fill"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_star_fill"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_star_fill"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_star_fill"/>
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:src="@drawable/baseline_star_fill"/>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text="(35K)"
                        android:textColor="@color/Wihte"
                        android:textSize="12sp"
                        android:layout_marginStart="20dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>





            </LinearLayout>
        </androidx.cardview.widget.CardView>





</androidx.cardview.widget.CardView>